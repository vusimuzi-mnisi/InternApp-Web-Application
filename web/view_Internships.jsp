</nav>

<!-- Content Section -->
<div class="container">
    <h1>Internships List</h1>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Closing Date</th>
                </tr>
            </thead>
            <tbody>
            <% 
                int internshipCount = 0;
                try {
                    Connection connection = DriverManager.getConnection("jdbc:derby://localhost:1527/internappdatabase", "root", "root");
                    Statement ps = connection.createStatement();
                    String sql = "SELECT * FROM internships_tbl";
                    ResultSet rs = ps.executeQuery(sql);
                    while (rs.next()) {
                        internshipCount++;
            %>
                <tr>
                    <td><%= rs.getInt("id") %></td>
                    <td><%= rs.getString("title") %></td>
                    <td><%= rs.getString("description") %></td>
                    <td><%= rs.getDate("closing_date") %></td>
                </tr>
            <% 
                    }
                    rs.close();
                    
                    String countSql = "SELECT COUNT(*) AS total FROM internships_tbl";
                    rs = ps.executeQuery(countSql);
                    if (rs.next()) {
                        internshipCount = rs.getInt("total");
                    }
                    rs.close();
                    ps.close();
                    connection.close();
                } catch (Exception e) {
                    e.printStackTrace();
                }
            %>
            </tbody>
        </table>
    </div>
    
</div>

